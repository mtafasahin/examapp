# Domain for TLS + public entrypoint (required)
DOMAIN=exam.example.com
LETSENCRYPT_EMAIL=admin@example.com

# Postgres
POSTGRES_USER=examuser
POSTGRES_PASSWORD=CHANGE_ME_STRONG

# Redis
REDIS_PASSWORD=CHANGE_ME_STRONG

# RabbitMQ
RABBITMQ_USER=rabbituser
RABBITMQ_PASS=CHANGE_ME_STRONG

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_STRONG

# Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_STRONG

# App auth (override appsettings.json values)
JWT_KEY=CHANGE_ME_AT_LEAST_32_CHARS________________________________

# Keycloak clients (set to your realm's values)
KEYCLOAK_CLIENT_ID=exam-client
KEYCLOAK_CLIENT_SECRET=CHANGE_ME
KEYCLOAK_ADMIN_CLIENT_ID=exam-admin
KEYCLOAK_ADMIN_CLIENT_SECRET=CHANGE_ME

# Public base URL (used by services as Authority etc.)
PUBLIC_BASE_URL=https://exam.example.com

# pgAdmin (optional; VM-local only via SSH tunnel)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=CHANGE_ME_STRONG

# (Optional) If you deploy via ACR + GitHub Actions
# ACR_LOGIN_SERVER=myregistry.azurecr.io
# ACR_USERNAME=<acr-username>
# ACR_PASSWORD=<acr-password>
# IMAGE_TAG=<git-sha>
